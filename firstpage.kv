<MainScreen>:
    md_bg_color: self.theme_cls.backgroundColor  
    BoxLayout:
        padding: "10sp"
        ScrollView:
            StackLayout:
                id: stack
                spacing: 15
                padding: 20    
        BoxLayout:
            orientation: 'vertical'
            padding: 20
            size_hint_x: 0.3
            MDButton:
                style: "elevated"
                size: "100sp", "60sp"
                size_hint: None,None
                pos_hint: {"center_y": 0.9}
                on_press: root.add_order()
                MDButtonIcon:
                    icon: "plus"
                MDButtonText:
                    id: order_btn
                    text: "Add Order"
            Widget:
